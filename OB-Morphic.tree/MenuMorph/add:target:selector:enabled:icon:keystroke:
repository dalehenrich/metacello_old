
!MenuMorph methodsFor: '*ob-morphic' stamp: 'lr 4/25/2011 11:05'!
add: label target: anObject selector: aSelector enabled: aBoolean icon: aSymbol keystroke: aKeystroke
	self add: label target: anObject selector: aSelector.
	self lastItem isEnabled: aBoolean.
	anObject longDescription isNil
		ifFalse: [ self lastItem setBalloonText: anObject longDescription maxLineLength: 256 ].
	OBMorphicPlatform default menuWithIcons
		ifTrue: [ self lastItem icon: (self iconNamed: aSymbol) ].
	aKeystroke isNil
		ifFalse: [ self lastItem keyText: aKeystroke asKeystroke printString ]! !
