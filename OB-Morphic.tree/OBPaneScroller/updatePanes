
!OBPaneScroller methodsFor: 'updating' stamp: 'lr 3/4/2009 08:18'!
updatePanes
	| count |
	model ifNil: 
		[ panes := Array new.
		^ self ].
	count := panes isNil 
		ifFalse: [ panes size ]
		ifTrue: [ 0 ].
	self basicUpdatePanes.
	self basicUpdateSizing.
	self layoutPanes.
	panes size = count ifFalse: 
		[ self hideOrShowScrollBar.
		self setScrollDeltas ].
	panes size > count ifTrue: [ self scrollToRight ].
	^ panes! !
