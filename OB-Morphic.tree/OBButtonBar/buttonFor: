
!OBButtonBar methodsFor: 'updating' stamp: 'lr 8/17/2010 18:00'!
buttonFor: aCommand 
	| buttonColor |
	buttonColor := model color duller.
	^ (OBPluggableButtonMorph 
		on: aCommand
		getState: nil
		action: #execute
		label: #buttonLabel)
		onColor: buttonColor
			offColor: buttonColor whiter;
		hResizing: #spaceFill;
		vResizing: #shrinkWrap;
		enabled: aCommand isActive;
		styleWith: OBPlatform current builder;
		setBalloonText: aCommand longDescription;
		yourself! !
