
!MetacelloSqueakPlatform methodsFor: 'notification' stamp: 'dkh 1/18/2012 16:40'!
do: aBlock displaying: aString

	self bypassProgressBars ifTrue: [ ^super do: aBlock displaying: aString ].
	aString
		displayProgressAt: Sensor cursorPoint
		from: 0 to: 2
		during: [:bar |
			bar value: 1.
			aBlock value.
			bar value: 2 ]! !
