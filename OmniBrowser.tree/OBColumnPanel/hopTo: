
!OBColumnPanel methodsFor: 'navigating' stamp: 'dr 11/10/2008 16:11'!
hopTo: aNode 
	| column |
	column := self columns last.
	[ column
		refreshAndSignal: false;
		includesNode: aNode ] whileFalse: 
		[ column := self 
			columnBefore: column
			ifAbsent: [ ^ self jumpTo: aNode ] ].
	column select: aNode.! !
