
!OBDefinitionPanel methodsFor: 'updating' stamp: 'lr 4/3/2010 18:12'!
refresh: announcement
	| newDefinition canDiscardEdits | 
	definition ifNil: [ ^ self ].
	newDefinition := self getDefinition ifNil: [ definition ].
	newDefinition text = definition text 
		ifTrue: [ ^ self ].
	canDiscardEdits := self canDiscardEdits.
	self definition: newDefinition.
	canDiscardEdits
		ifFalse: [ self changed: #codeChangedElsewhere ]! !
