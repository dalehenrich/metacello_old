
!OBDefinitionPanel methodsFor: 'updating' stamp: 'lr 11/26/2010 00:04'!
aboutToChange: anAnnouncement
	| ok |
	self canDiscardEdits
		ifTrue: [ ^ self ].
	ok := OBConfirmationRequest
		prompt: 'Changes have not been saved.
Is it ok to discard those changes?'
		confirm: 'Discard' cancel: 'Cancel'.
	(ok isNil not and: [ ok ])
		ifTrue: [ self changed: #clearUserEdits ]
		ifFalse: [ anAnnouncement veto ]! !
