
!OBAnnotationPanel methodsFor: 'updating' stamp: 'lr 8/16/2010 11:10'!
selectionChanged: anAnnouncement
	process isNil
		ifFalse: [ process terminate ].
	process := nil.
	anAnnouncement node isNil
		ifTrue: [ ^ self text: String new ].
	process := [ self text: anAnnouncement node annotationString ]
		forkAt: Processor userBackgroundPriority! !
