
!OBMClassQuery methodsFor: 'private' stamp: 'lr 4/5/2010 12:37'!
find
	| searchNode classes |
	self browser isSearchBrowser
		ifTrue: [ ^ self openSearchBrowser ].
	(isWild not and: [ pattern size = 1 and: [ (Smalltalk hasClassNamed: pattern first) ] ])
		ifTrue: [ ^ self openClassBrowserOn: (Smalltalk classNamed: pattern first) asNode ].
	searchNode := self searchNode.
	(classes := searchNode classes) size = 1
		ifTrue: [ self openClassBrowserOn: classes first ]
		ifFalse: [ self openSearchBrowserOn: searchNode ]! !
