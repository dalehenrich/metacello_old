
!OBMethodNode methodsFor: 'drag and drop' stamp: 'lr 5/28/2010 14:00'!
dropOnMethodCategory: aNode
	aNode theClass = self theClass
		ifTrue: [ 
			self theClass organization
				classify: self selector
				under: aNode category
				suppressIfDefault: false ]
		ifFalse: [
			aNode theClass 
				compile: self source
				classified: aNode category.
			Sensor shiftPressed
				ifFalse: [ self theClass removeSelector: self selector ] ].
	aNode signalChildrenChanged.
	^ true! !
